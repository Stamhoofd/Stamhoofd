{
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "codeQL.githubDatabase.update": "never",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "never"
    },
    "github.copilot.enable": {
        "*": true,
        "vue": true,
        "markdown": false,
        "plaintext": false,
        "yaml": false,
        "json": false
    },
    "editor.codeLens": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "eslint.format.enable": true,
    "eslint.options": {
        "extensions": [
            ".js",
            ".ts",
            ".vue"
        ]
    },
    "eslint.validate": [
        "typescript",
        "javascript",
        "vue"
    ],
    "eslint.workingDirectories": [
        "./backend/app/*",
        "./backend/shared/*",
        "./frontend/app/*",
        "./frontend/shared/*",
        "./devops",
        "./shared/*"
    ],
    "i18n-ally.autoDetection": false,
    "i18n-ally.disablePathParsing": true,
    "i18n-ally.displayLanguage": "nl",
    "i18n-ally.enabledFrameworks": [
        "vue"
    ],
    "i18n-ally.extract.autoDetect": true,
    "i18n-ally.extract.keygenStrategy": "source",
    "i18n-ally.extract.parsers.html": {
        "attributes": [
            "text",
            "title",
            "alt",
            "placeholder",
            "label",
            "aria-label"
        ],
        "ignoredTags": [
            "script",
            "style"
        ],
        "inlineText": true,
        "vBind": true
    },
    "i18n-ally.keepFulfilled": false,
    "i18n-ally.keystyle": "flat",
    "i18n-ally.localesPaths": [
        "shared/locales/src"
    ],
    "i18n-ally.sourceLanguage": "nl",
    "javascript.format.enable": false,
    "search.exclude": {
        "**.tsbuildinfo": true,
        "**/android/app/build": true,
        "**/android/app/src/main/assets": true,
        "**/dist": true,
        "**/dist-prefix": true,
        "**/ios/App/App/public": true,
        "**/node_modules": true,
        "**/yarn-error.log": true,
        ".yarn/releases": true,
        "**/.cache": true,
        "LICENSE": true
    },
    "search.useIgnoreFiles": false,
    "typescript.preferences.importModuleSpecifier": "project-relative",
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true
}

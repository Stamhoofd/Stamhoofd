{
    "name": "@stamhoofd/backend",
    "version": "1.0.0",
    "main": "index.ts",
    "license": "UNLICENCED",
    "private": true,
    "scripts": {
        "build": "tsc -b && mkdir -p ./dist/src/migrations && cp ./src/migrations/*.sql ./dist/src/migrations && mkdir -p ./dist/src/data && cp -r ./src/data/* ./dist/src/data",
        "build:full": "rm -rf ./dist && yarn build",
        "start": "yarn build && node ./dist/index.js",
        "test": "yarn build:full && jest",
        "migrations": "yarn build && node ./dist/migrations.js",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "upgrade:internal": "yarn upgrade --scope simonbackx",
        "yalc:clear": "yalc remove --all && rm -rf node_modules && yarn install"
    },
    "devDependencies": {
        "@types/libsodium-wrappers": "^0.7.7",
        "@types/mailparser": "^2.7.4",
        "@types/node": "^14.0.26",
        "colors": "^1.4.0",
        "ts-node": "^8.6.2"
    },
    "dependencies": {
        "@mollie/api-client": "^3.2.4",
        "@simonbackx/simple-database": "1.11.14",
        "@simonbackx/simple-endpoints": "^1.3.0",
        "@types/jest": "^25.1.4",
        "@types/mysql": "^2.15.9",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "aws-sdk": "^2.720.0",
        "base-x": "^3.0.8",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-simple-import-sort": "^5.0.2",
        "formidable": "^1.2.2",
        "html-to-text": "^5.1.1",
        "jest": "^25.3.0",
        "jest-extended": "^0.11.5",
        "libsodium-wrappers": "^0.7.6",
        "mailparser": "^3.0.0",
        "mockdate": "^3.0.2",
        "mysql": "^2.18.1",
        "node-rsa": "^1.1.1",
        "nodemailer": "^6.4.10",
        "sharp": "^0.25.4",
        "tslib": "^1.11.1",
        "typescript": "^3.8.3",
        "uuid": "^8.2.0"
    }
}

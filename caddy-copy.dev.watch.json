        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "stamhoofd.dev",
                            "*.stamhoofd.dev",
                            "*.shop.stamhoofd.dev",
                            "stamhoofd.app",
                            "*.api.stamhoofd.dev",
                            "api.admin.stamhoofd.dev",
                            "login.sgv.stamhoofd.dev",
                            "groepsadmin.sgv.stamhoofd.dev"

{
    "apps": {
        "http": {
            "servers": {
                "stamhoofd.dev": {
                    "listen": [
                        ":443"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "api.stamhoofd.dev",
                                        "*.api.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9091"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "dashboard.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/Users/simon/Documents/Projects/stamhoofd/app/dashboard/dist/",
                                    "pass_thru": true
                                },
                                {
                                    "handler": "rewrite",
                                    "uri": "/index.html"
                                },
                                {
                                    "handler": "file_server",
                                    "root": "/Users/simon/Documents/Projects/stamhoofd/app/dashboard/dist/"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "*.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/Users/simon/Documents/Projects/stamhoofd/app/registration/dist/"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "login.sgv.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "login.scoutsengidsenvlaanderen.be:443"
                                        }
                                    ],
                                    "transport": {
                                        "protocol": "http",
                                        "tls": {}
                                    },
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "host": [
                                                    "login.scoutsengidsenvlaanderen.be"
                                                ],
                                                "origin": [
                                                    "https://login.scoutsengidsenvlaanderen.be"
                                                ]
                                            }
                                        },
                                        "response": {
                                            "set": {
                                                "Access-Control-Allow-Origin:": [
                                                    "https://dashboard.stamhoofd.dev"
                                                ],
                                                "Access-Control-Allow-Methods:": [
                                                    "OPTIONS, GET, POST, PATCH, DELETE"
                                                ],
                                                "Access-Control-Allow-Headers": [
                                                    "{http.request.header.access-control-request-headers}"
                                                ],
                                                "Access-Control-Max-Age": [
                                                    "86400"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "groepsadmin.sgv.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "groepsadmin.scoutsengidsenvlaanderen.be:443"
                                        }
                                    ],
                                    "transport": {
                                        "protocol": "http",
                                        "tls": {}
                                    },
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "host": [
                                                    "groepsadmin.scoutsengidsenvlaanderen.be"
                                                ],
                                                "origin": [
                                                    "https://groepsadmin.scoutsengidsenvlaanderen.be"
                                                ]
                                            }
                                        },
                                        "response": {
                                            "set": {
                                                "Access-Control-Allow-Origin:": [
                                                    "https://dashboard.stamhoofd.dev"
                                                ],
                                                "Access-Control-Allow-Methods:": [
                                                    "OPTIONS, GET, POST, PATCH, DELETE"
                                                ],
                                                "Access-Control-Allow-Headers": [
                                                    "{http.request.header.access-control-request-headers}"
                                                ],
                                                "Access-Control-Max-Age": [
                                                    "86400"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/Users/simon/Documents/Projects/stamhoofd/app/registration/dist/"
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "stamhoofd.dev",
                            "*.stamhoofd.dev",
                            "*.api.stamhoofd.dev",
                            "login.sgv.stamhoofd.dev",
                            "groepsadmin.sgv.stamhoofd.dev"
                        ],
                        "on_demand": false,
                        "issuer": {
                            "module": "acme",
                            "challenges": {
                                "dns": {
                                    "provider": {
                                        "name": "lego_deprecated",
                                        "provider_name": "digitalocean"
                                    }
                                }
                            }
                        }
                    },
                    {
                        "on_demand": true
                    }
                ],
                "on_demand": {
                    "rate_limit": {
                        "interval": "1d",
                        "burst": 50
                    },
                    "ask": "http://127.0.0.1:9091/v15/check-domain-cert"
                }
            }
        }
    }
}
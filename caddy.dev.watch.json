{
    "apps": {
        "http": {
            "servers": {
                "stamhoofd.dev": {
                    "listen": [
                        ":443"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "api.stamhoofd.dev",
                                        "*.api.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:9091"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "x-real-ip": [
                                                    "{http.request.remote}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "dashboard.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8080"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "*.stamhoofd.dev"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8081"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "127.0.0.1:8081"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "stamhoofd.dev",
                            "*.stamhoofd.dev",
                            "*.api.stamhoofd.dev"
                        ],
                        "on_demand": false,
                        "issuer": {
                            "module": "acme",
                            "challenges": {
                                "dns": {
                                    "provider": {
                                        "name": "lego_deprecated",
                                        "provider_name": "digitalocean"
                                    }
                                }
                            }
                        }
                    },
                    {
                        "on_demand": true
                    }
                ],
                "on_demand": {
                    "rate_limit": {
                        "interval": "1d",
                        "burst": 50
                    }
                }
            }
        }
    }
}
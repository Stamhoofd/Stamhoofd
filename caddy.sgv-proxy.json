{
    "apps": {
        "http": {
            "servers": {
                "sgv.stamhoofd.app": {
                    "listen": [
                        ":443"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "login.sgv.stamhoofd.app"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "login.scoutsengidsenvlaanderen.be:443"
                                        }
                                    ],
                                    "transport": {
                                        "protocol": "http",
                                        "tls": {}
                                    },
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "host": [
                                                    "login.scoutsengidsenvlaanderen.be"
                                                ],
                                                "origin": [
                                                    "https://login.scoutsengidsenvlaanderen.be"
                                                ]
                                            }
                                        },
                                        "response": {
                                            "set": {
                                                "Access-Control-Allow-Origin:": [
                                                    "https://stamhoofd.app"
                                                ],
                                                "Access-Control-Allow-Methods:": [
                                                    "OPTIONS, GET, POST, PATCH, DELETE"
                                                ],
                                                "Access-Control-Allow-Headers": [
                                                    "{http.request.header.access-control-request-headers}"
                                                ],
                                                "Access-Control-Max-Age": [
                                                    "86400"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "groepsadmin.sgv.stamhoofd.app"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "groepsadmin.scoutsengidsenvlaanderen.be:443"
                                        }
                                    ],
                                    "transport": {
                                        "protocol": "http",
                                        "tls": {}
                                    },
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "host": [
                                                    "groepsadmin.scoutsengidsenvlaanderen.be"
                                                ],
                                                "origin": [
                                                    "https://groepsadmin.scoutsengidsenvlaanderen.be"
                                                ]
                                            }
                                        },
                                        "response": {
                                            "set": {
                                                "Access-Control-Allow-Origin:": [
                                                    "https://stamhoofd.app"
                                                ],
                                                "Access-Control-Allow-Methods:": [
                                                    "OPTIONS, GET, POST, PATCH, DELETE"
                                                ],
                                                "Access-Control-Allow-Headers": [
                                                    "{http.request.header.access-control-request-headers}"
                                                ],
                                                "Access-Control-Max-Age": [
                                                    "86400"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "login.sgv.stamhoofd.app",
                            "groepsadmin.sgv.stamhoofd.app"
                        ],
                        "on_demand": false,
                        "issuer": {
                            "module": "acme",
                            "challenges": {
                                "dns": {
                                    "provider": {
                                        "name": "lego_deprecated",
                                        "provider_name": "digitalocean"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}
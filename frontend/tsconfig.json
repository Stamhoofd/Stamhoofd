{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "app/**/*.ts",
        "app/**/*.ts.map",
        "app/**/*.vue",
        "shared/**/*.ts",
        "shared/**/*.ts.map",
        "shared/**/*.vue",
        "../*.d.ts",
        "*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
{
    "private": true,
    "workspaces": [
        "frontend/app/*",
        "frontend/shared/*",
        "backend",
        "shared/*"
    ],
    "scripts": {
        "build": "cd shared/crypto && yarn build && cd ../structures && yarn build && cd ../utility && yarn build && cd ../..",
        "build:frontend": "yarn build && cd frontend/app/registration && yarn build:production && cd ../dashboard && yarn build:production && cd ../registration && yarn build:production",

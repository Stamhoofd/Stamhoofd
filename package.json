{
    "name": "stamhoofd",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend/app/*",
        "frontend/shared/*",
        "backend/app/*",
        "backend/shared/*",
        "shared/*",
        "*"
    ],
    "license": "AGPL-3.0-only",
    "scripts": {
        "dev": "yarn clear-vite-cache && concurrently -r 'yarn -s build:shared:watch' 'wait-on shared/structures/dist/index.js && lerna run dev --stream --parallel'",
        "stripe-webhooks": "stripe listen --forward-to http://api.stamhoofd/stripe/webhooks",
        "test": "lerna run test",
        "migrate": "yarn -s build:shared && lerna run migrations --concurrency 1",
        "dev:server": "concurrently -r 'yarn -s dev' 'yarn -s caddy' 'yarn -s dns' 'yarn -s mail' 'yarn -s stripe-webhooks'",
        "dev:backend": "concurrently -r 'yarn -s build:shared:watch' 'lerna run dev:backend --stream --parallel' 'yarn caddy' 'yarn dns' 'yarn mail'",
        "app:release": "cd devops && yarn -s build-code -s app && cd ../frontend/app/mobile && yarn ios && yarn android",
        "build:shared:watch": "npx nodemon --quiet --watch shared --watch backend/shared --ignore './shared/*/dist/' --ignore './shared/*/esm/dist/' --ignore './backend/shared/*/dist/' --ext .ts,.json,.sql,.mjs --exec 'yarn -s build:shared'",
        "build:full": "yarn -s clear:build && yarn -s build",
        "build": "cd shared/locales && yarn -s build && cd ../utility && yarn -s build && cd ../structures && yarn -s build && cd ../..",
        "clear:build": "rm -rf shared/*/dist shared/*/esm/dist backend/shared/*/dist",
        "clear": "rm -rf shared/*/dist shared/*/esm/dist frontend/app/*/dist backend/shared/*/dist backend/app/*/dist",
        "build:frontend": "yarn -s build && cd frontend/app/registration && yarn -s build:production && cd ../dashboard && yarn -s build:production && cd ../registration && yarn -s build:production",
        "build:structures": "cd shared/structures && yarn -s build && cd ../..",
        "build:shared": "echo 'Building shared dependencies...' && yarn -s build && cd backend/shared/queues && yarn -s build && cd ../i18n && yarn -s build && cd ../email && yarn -s build && cd ../sql && yarn -s build && cd ../models && yarn -s build && cd ../logging && yarn -s build && cd ../middleware && yarn -s build && cd ../env && yarn -s build && cd ../.. && echo 'Done building shared dependencies.'",
        "build:locales": "cd shared/locales && yarn -s build && cd ../..",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
        "caddy": "caddy run -w --config .development/caddy.json",
        "dns": "export SERVER_IP=127.0.0.1 && cd .development && source loadenv.sh && coredns",
        "mail": "maildev --ip 0.0.0.0 --incoming-user username --incoming-pass password",
        "clear-dependencies": "rm -rf node_modules */node_modules **/node_modules",
        "clear-vite-cache": "rm -rf frontend/app/*/node_modules/.vite",
        "ship": "yarn -s build:shared:full && lerna publish --no-private"
    },
    "dependencies": {
        "@babel/runtime": "^7.15.4",
        "@simonbackx/simple-encoding": "2.15.0",
        "@simonbackx/simple-errors": "^1.4.0",
        "@simonbackx/simple-networking": "1.16.0",
        "@simonbackx/vue-app-navigation": "2.1.1",
        "@types/sortablejs": "^1.15.8",
        "@zxcvbn-ts/core": "^0.3.0",
        "@zxcvbn-ts/language-common": "^0.1.2",
        "@zxcvbn-ts/language-nl-be": "^0.3.0",
        "argon2": "^0.40.1",
        "chart.js": "^3.9.1",
        "core-js": "^3.20.1",
        "file-saver": "^2.0.5",
        "jsvat-next": "3.0.2",
        "jszip": "^3.7.1",
        "libphonenumber-js": "^1.9.39",
        "luxon": "3.4.4",
        "path-browserify": "^1.0.1",
        "pdfkit": "0.15.0",
        "qrcode": "1.5.3",
        "sharp": "^0.32",
        "sortablejs-vue3": "^1.2.11",
        "tslib": "^2.3.1",
        "uuid": "^9.0.0",
        "vue": "3.4.25",
        "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "vite-svg-2-webfont": "3.4.0",
        "@types/jest": "^27.0.3",
        "@types/pdfkit": "0.13.4",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "@vitejs/plugin-vue": "5.1.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "autoprefixer": "^10.4.0",
        "concurrently": "8.2.2",
        "eslint": "^8.56.0",
        "eslint-plugin-jest": "28.2.0",
        "eslint-plugin-simple-import-sort": "12.1.0",
        "eslint-plugin-vue": "^9.25.0",
        "favicons": "^7.2.0",
        "jest": "29.7.0",
        "jest-cli": "^29.7.0",
        "jest-extended": "^1.2.0",
        "lerna": "^8.1.2",
        "maildev": "^2.1.0",
        "nodemon": "^3.1.0",
        "postcss": "8.4.38",
        "sass": "^1.45.1",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.1",
        "typescript": "5.4.5",
        "typescript-eslint": "^7.7.1",
        "vite": "5.3.5",
        "vue-tsc": "^2.0.14",
        "wait-on": "^7.2.0"
    },
    "resolutions": {
        "**/@mollie/api-client/axios": "^0.28.1",
        "prosemirror-model": "1.22.1",
        "vue": "3.4.25",
        "elliptic": "^6.5.4",
        "sortablejs": "^1.15.0",
        "nodemailer": "6.9.13",
        "yargs": "17.7.2",
        "sharp": "^0.32",
        "tar": "6.2.1",
        "postcss": "8.4.38",
        "socket.io": "4.6.2",
        "ws": "8.17.1"
    }
}

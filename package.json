{
    "name": "stamhoofd",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend/app/*",
        "frontend/shared/*",
        "backend/app/*",
        "backend/shared/*",
        "shared/*",
        "*",
        ".yalc/@*/*",
        ".yalc/*"
    ],
    "engines": {
        "yarn": "1.19.0"
    },
    "license": "AGPL-3.0-only",
    "scripts": {
        "build": "cd shared/locales && yarn build && cd ../structures && yarn build && cd ../utility && yarn build && cd ../crypto && yarn build && cd ../..",
        "build:full": "cd shared/locales && yarn build:full && cd ../structures && yarn build:full && cd ../utility && yarn build:full && cd ../crypto && yarn build:full && cd ../..",
        "build:frontend": "yarn build && cd frontend/app/registration && yarn build:production && cd ../dashboard && yarn build:production && cd ../registration && yarn build:production",
        "build:structures": "cd shared/structures && yarn build && cd ../..",
        "build:shared": "yarn build && cd backend/shared/queues && yarn build && cd ../email && yarn build && cd ../models && yarn build && cd ../i18n && yarn build && cd ../env && yarn build && cd ../..",
        "build:shared:full": "yarn build:full && cd backend/shared/queues && yarn build:full && cd ../email && yarn build:full && cd ../models && yarn build:full && cd ../i18n && yarn build:full && cd ../env && yarn build:full && cd ../..",
        "build:locales": "cd shared/locales && yarn build && cd ../..",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
        "upgrade:internal": "yarn upgrade --scope simonbackx",
        "caddy:development": "export $(cat .env | xargs) && caddy run --resume",
        "caddy:development:config": "curl localhost:2019/load -X POST -H \"Content-Type: application/json\" -d @caddy.dev.watch.json",
        "get-version": "node -e 'process.stdout.write(require(\"./package.json\").version);'",
        "version": "yarn workspaces run -s version --no-git-tag-version --new-version \"$npm_package_version\" 2>&1 >/dev/null",
        "ptest": "yarn workspaces run -s publish --tag dev"
    },
    "dependencies": {
        "@babel/runtime": "^7.15.4",
        "@simonbackx/simple-encoding": "^2.7.0",
        "@simonbackx/simple-errors": "^1.3.0",
        "@simonbackx/simple-networking": "~1.10.0",
        "@simonbackx/vue-app-navigation": "^1.24.0",
        "@zxcvbn-ts/core": "^0.3.0",
        "@zxcvbn-ts/language-common": "^0.1.2",
        "@zxcvbn-ts/language-nl-be": "^0.3.0",
        "chart.js": "^3.9.1",
        "core-js": "^3.20.1",
        "crypto-browserify": "^3.12.0",
        "jsvat": "^2.5.3",
        "libphonenumber-js": "^1.9.39",
        "luxon": "^2.3.2",
        "path-browserify": "^1.0.1",
        "qrcode": "^1.4.4",
        "stream-browserify": "^3.0.0",
        "tslib": "^2.3.1",
        "uuid": "^8.3.2",
        "vue": "^2.6.14",
        "vue-class-component": "^7.2.6",
        "vue-i18n": "^8.26.5",
        "vue-meta": "^2.4.0",
        "vue-property-decorator": "^9.1.2",
        "vuedraggable": "^2.24.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "@simonbackx/webfonts-loader": "^0.0.1",
        "@types/jest": "^27.0.3",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "@vue/preload-webpack-plugin": "^2.0.0",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.2.3",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^10.2.0",
        "css-loader": "^6.5.1",
        "css-minimizer-webpack-plugin": "^3.3.1",
        "eslint": "^7.32.0",
        "eslint-plugin-jest": "^25.3.2",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-vue": "^7.16.0",
        "favicons": "^6.2.2",
        "favicons-webpack-plugin": "^5.0.2",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^6.5.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^27.4.5",
        "jest-extended": "^1.2.0",
        "mini-css-extract-plugin": "^2.4.5",
        "postcss": "^8.4.5",
        "postcss-loader": "^6.2.1",
        "raw-loader": "^4.0.2",
        "sass": "^1.45.1",
        "sass-loader": "^12.4.0",
        "speed-measure-webpack-plugin": "^1.5.0",

        "webpack-merge": "^5.8.0"
    },
    "resolutions": {
        "vue": "^2.6.14",
        "**/axios": "^0.24.0",
        "axios": "^0.24.0",
        "elliptic": "^6.5.4",
        "sortablejs": "^1.15.0"
    }
}
